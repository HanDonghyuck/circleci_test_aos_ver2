<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="kr.co.camera.view.intro_camera.LongHeadFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/long_head_iv_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/photo_02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/long_head_view_bottom"/>

        <ImageView
            android:id="@+id/long_head_iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:background="@drawable/dog_02_guide_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<View-->
            <!--android:id="@+id/long_head_view_top"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginBottom="120dp"-->
            <!--android:background="@drawable/camera_background_all"-->
            <!--app:layout_constraintBottom_toTopOf="@id/long_head_view_bottom"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->

        <!--<View-->
            <!--android:id="@+id/long_head_view_bottom"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:background="@drawable/camera_background_all"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@id/long_head_view_top" />-->


        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/long_head_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:scale_base_width="768"
            app:scale_base_height="1024"
            app:scale_width="768"
            app:scale_height="1024">

            <View
                android:id="@+id/long_head_view_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_background_all"
                app:scale_height="410"
                app:scale_width="768" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <View
            android:id="@+id/long_head_view_bottom"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/camera_background_all"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!--android:text="@string/Login000"-->
        <TextView
            android:id="@+id/long_head_tv"
            style="@style/textRegular"
            android:layout_margin="30dp"
            android:background="@null"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/long_head_view_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
