<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="activity"
                type="kr.co.camera.view.CameraActivity"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/camera_sl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:scale_base_width="768"
                app:scale_base_height="1024"
                app:scale_width="768"
                app:scale_height="1024">

            <View
                    android:id="@+id/camera_view_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/camera_background_all"
                    app:scale_width="768"
                    app:scale_height="410"/>

            <SurfaceView
                    android:id="@+id/camera_sv_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_width="768"
                    app:scale_height="1024"/>

            <View
                    android:id="@+id/camera_view_rect_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/camera_rect_red"
                    app:scale_width="700"
                    app:scale_height="203.2"/>

            <View
                    android:id="@+id/camera_view_focus_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:onClick="@{() -> activity.onClickFocus()}"
                    app:scale_width="600"
                    app:scale_height="600"/>

