                    <!--android:layout_height="match_parent"-->
                    <!--android:layerType="software"-->
                    <!--android:background="@drawable/circle_line"-->
                    <!--app:scale_width="50.8"-->
                    <!--app:scale_height="101.6"-->
                    <!--app:scale_top="451.04"-->
                    <!--app:scale_left="411.09"/>-->

            <ImageView
                    android:id="@+id/camera_view_left_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:background="@drawable/circle_line"
                    app:scale_width="50.8"
                    app:scale_height="50.8"
                    app:scale_top="476.44"
                    app:scale_left="306.1"/>

            <ImageView
                    android:id="@+id/camera_view_right_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:background="@drawable/circle_line"
                    app:scale_width="50.8"
                    app:scale_height="50.8"
                    app:scale_top="476.44"
                    app:scale_left="411.09"/>

