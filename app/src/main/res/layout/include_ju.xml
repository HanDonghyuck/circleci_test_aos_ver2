            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/center_line"
                    android:layerType="software"
                    app:scale_width="500"
                    app:scale_height="200"/>

            <View
                    android:id="@+id/camera_view_eye_left_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camera_side_circle_white"
                    app:scale_width="101.6"
                    app:scale_height="101.6"
                    app:scale_top="451.04"
                    app:scale_left="156.1"/>

            <TextView
                    android:id="@+id/camera_tv_eye_left_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="눈"
                    android:textColor="@android:color/black"
                    app:scale_width="101.6"
                    app:scale_height="101.6"
                    app:scale_top="451.04"
                    app:scale_left="156.1"
                    app:scale_textsize="70"/>

